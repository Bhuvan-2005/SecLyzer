# SecLyzer Secrets Configuration
# CRITICAL: Protect this file with chmod 600
# Location: /etc/seclyzer/secrets.env or ~/.config/seclyzer/secrets.env

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# InfluxDB Configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=
INFLUX_ORG=seclyzer
INFLUX_BUCKET=seclyzer

# SQLite Configuration  
SQLITE_DB_PATH=/var/lib/seclyzer/databases/seclyzer.db

# Logging
SECLYZER_LOG_LEVEL=INFO
SEC_LOG_DIR=/var/log/seclyzer
